<%= simple_form_for @player, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
  <legend><%= controller.action_name.capitalize%> Player </legend>
  <%= f.input :name %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                players_path, :class => 'btn' %>
  </fieldset>              
  </div>
<% end %>
